@model IEnumerable<ExpenseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="my-5">
        <div class="row">
            <h2 class="text-center">Expenses</h2><br />
            <p class="col-sm-5">
                <a class="btn btn-outline-secondary" asp-action="Create">Create New</a>
            </p>
        </div>
        <div class="col-md-12 table-responsive">
            <table class="table table-striped table-hover text-center">
                <thead>
                    <tr>
                        <th>Serial No</th>
                        <th>Category</th>
                        <th>Date Of Expense</th>
                        <th>Expense Amount</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfExpense)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpenseAmount)
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ExpenseID">Edit</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ExpenseID">Delete</a>
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>