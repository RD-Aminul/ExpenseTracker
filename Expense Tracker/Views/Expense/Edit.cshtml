@model ExpenseViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row" style="margin-bottom: 15px;">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExpenseID" />
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="CategoryName" class="control-label" style="margin-bottom: 6px;"></label>
                    <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.ExpenseCategories, "CategoryID", "CategoryName"))">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 15px;">
                    <label asp-for="DateOfExpense" class="control-label" style="margin-bottom: 6px;"></label>
                    <input asp-for="DateOfExpense" class="form-control" />
                    <span asp-validation-for="DateOfExpense" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExpenseAmount" class="control-label" style="margin-bottom: 6px;"></label>
                    <input type="number" asp-for="ExpenseAmount" class="form-control" />
                    <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a style="text-decoration:none" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}